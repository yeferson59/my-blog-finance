---
// src/components/Header.astro
import { Button } from "@/components/ui/button";
import { Icons } from "@/components/ui/icons";
import SignOut from './SignOut';
import Newsletter from './Newsletter';

// Asume que tienes una forma de verificar si el usuario está autenticado
const isAuthenticated = Astro.locals.user // Reemplaza esto con tu lógica real de autenticación
---

<header class="w-full bg-white dark:bg-gray-800 shadow-sm">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
		<div class="flex justify-between items-center py-4">
			<a class="flex items-center justify-center" href="/">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-secondary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
				</svg>
				<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 ml-2 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
				</svg>
				<span class="ml-2 text-2xl font-bold text-gray-900 dark:text-white">TechFin Blog</span>
			</a>
			<nav class="hidden md:flex gap-6">
				<a class="text-sm font-medium text-gray-700 dark:text-gray-200 hover:text-primary-500 dark:hover:text-primary-400" href="/#inicio">Inicio</a>
				<a class="text-sm font-medium text-gray-700 dark:text-gray-200 hover:text-primary-500 dark:hover:text-primary-400" href="/#tecnologia">Tecnología</a>
				<a class="text-sm font-medium text-gray-700 dark:text-gray-200 hover:text-primary-500 dark:hover:text-primary-400" href="/#finanzas">Finanzas</a>
				<a class="text-sm font-medium text-gray-700 dark:text-gray-200 hover:text-primary-500 dark:hover:text-primary-400" href="/sobre-nosotros">Sobre Nosotros</a>
				<a class="text-sm font-medium text-gray-700 dark:text-gray-200 hover:text-primary-500 dark:hover:text-primary-400" href="/blog">Posts</a>
			</nav>
			<div class="flex items-center gap-4">
				<Newsletter client:load />
				{isAuthenticated ? (
					<SignOut client:load />
				) : (
					<a href="/auth/signin">
						<Button variant="outline">
							<Icons.logIn className="mr-2 h-4 w-4" />
							Iniciar Sesión
						</Button>
					</a>
				)}
			</div>
		</div>
	</div>
</header>