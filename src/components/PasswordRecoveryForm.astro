---
// src/components/PasswordRecoveryForm.astro
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Icons } from "@/components/ui/icons";
---

<div class="mx-auto max-w-sm space-y-6">
  <div class="space-y-2 text-center">
    <h1 class="text-3xl font-bold text-primary-800 dark:text-primary-200">
      Recuperar Contraseña
    </h1>
    <p class="text-gray-600 dark:text-gray-400">
      Ingresa tu email para recibir instrucciones de recuperación
    </p>
  </div>
  <form method="post" action="/api/auth/recover-password" class="space-y-4">
    <div class="space-y-2">
      <Label htmlFor="email">Email</Label>
      <Input
        id="email"
        name="email"
        type="email"
        placeholder="nombre@ejemplo.com"
        required
        className="w-full px-3 py-2 border rounded-md text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50"
      />
    </div>
    <Button
      type="submit"
      className="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
    >
      Enviar Instrucciones
      <Icons.google className="ml-2 h-4 w-4" />
    </Button>
  </form>
  <div class="text-center space-y-2">
    <a
      href="/auth/signin"
      class="text-sm text-gray-600 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-300"
    >
      Volver al inicio de sesión
    </a>
  </div>
</div>
