---
// src/components/LoginForm.astro
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Icons } from "@/components/ui/icons";
---

<div class="mx-auto max-w-sm space-y-6">
  <div class="space-y-2 text-center">
    <h1 class="text-3xl font-bold text-primary-800 dark:text-primary-200">
      Iniciar Sesión
    </h1>
    <p class="text-gray-600 dark:text-gray-400">
      Elige tu método de inicio de sesión preferido
    </p>
  </div>
  <div class="space-y-4">
    <a href="/login/github">
      <Button
        variant="outline"
        className="w-full bg-white hover:bg-gray-100 text-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-white"
      >
        <Icons.gitHub className="mr-2 h-4 w-4" />
        GitHub
      </Button>
    </a>
    <a href="/login/google">
      <Button
        variant="outline"
        className="w-full bg-white hover:bg-gray-100 text-gray-800 dark:bg-gray-800 dark:hover:bg-gray-700 dark:text-white"
      >
        <Icons.google className="mr-2 h-4 w-4" />
        Google
      </Button>
    </a>
  </div>
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <span class="w-full border-t border-gray-300 dark:border-gray-600"></span>
    </div>
    <div class="relative flex justify-center text-xs uppercase">
      <span
        class="bg-white px-2 text-gray-500 dark:bg-gray-800 dark:text-gray-400"
      >
        O continúa con
      </span>
    </div>
  </div>
  <form method="post" action="/api/auth/login" class="space-y-4">
    <div class="space-y-2">
      <Label htmlFor="email">Email</Label>
      <Input
        id="email"
        name="email"
        placeholder="nombre@ejemplo.com"
        required
        type="email"
        className="w-full px-3 py-2 border rounded-md text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 focus:border-primary-500 focus:ring-3 focus:ring-primary-500 focus:ring-opacity-50"
      />
    </div>
    <div class="space-y-2">
      <Label htmlFor="password">Contraseña</Label>
      <Input
        id="password"
        name="password"
        required
        type="password"
        className="w-full px-3 py-2 border rounded-md text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 focus:border-primary-500 focus:ring-3 focus:ring-primary-500 focus:ring-opacity-50"
      />
    </div>
    <Button
      type="submit"
      className="w-full bg-primary-600 hover:bg-primary-700 text-white font-bold py-2 px-4 rounded focus:outline-hidden focus:shadow-outline"
    >
      Iniciar Sesión
    </Button>
  </form>
  <div class="text-center space-y-2">
    <a
      href="/auth/forgot-password"
      class="text-sm text-primary-600 hover:text-primary-500 dark:text-primary-400 dark:hover:text-primary-300"
    >
      ¿Olvidaste tu contraseña?
    </a>
    <div>
      <a
        href="/auth/signup"
        class="text-sm text-gray-600 hover:text-gray-500 dark:text-gray-400 dark:hover:text-gray-300"
      >
        ¿No tienes una cuenta? Regístrate
      </a>
    </div>
  </div>
</div>

<style>
  /* Estilos adicionales si son necesarios */
</style>
